        "# Initialize the Gemini Client using your secret API Key\n",
        "API_KEY = userdata.get('GOOGLE_API_KEY')\n",
        "client = genai.Client(api_key=API_KEY)\n",
        "\n",
        "def summarize_text(text_to_summarize):\n",
        "    # This is the \"Instruction\" we give to the Gen AI\n",
        "    instruction = f\"\"\"\n",
        "    You are a professional web analyst. Summarize the following website text.\n",
        "    Please provide:\n",
        "    1. What the website is about ?\n",
        "    2. 2 interesting things\n",
        "\n",
        "    TEXT:\n",
        "    {text_to_summarize}\n",
        "    \"\"\"\n",
        "\n",
        "    # Call the Gemini 2.5 Flash model\n",
        "    response = client.models.generate_content(\n",
        "        model=\"gemini-2.5-flash\",\n",
        "        contents=instruction\n",
        "    )\n",
        "\n",
        "    return response.text\n",
        "\n",
        "print(\"AI Summarizer function is ready!\")"
      ],
