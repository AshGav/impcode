        "def get_website_content(url):\n",
        "    # Fetch the webpage\n",
        "    response = requests.get(url)\n",
        "\n",
        "    # Parse the HTML code\n",
        "    soup = BeautifulSoup(response.text, 'html.parser')\n",
        "\n",
        "    # Remove technical noise (code and styling)\n",
        "    for tech_stuff in soup([\"script\", \"style\", \"nav\", \"footer\"]):\n",
        "        tech_stuff.decompose()\n",
        "\n",
        "    # Get the plain text and remove extra empty spaces\n",
        "    clean_text = \" \".join(soup.get_text().split())\n",
        "\n",
        "    print(f\"Successfully extracted {len(clean_text)} characters of text.\")\n",
        "    return clean_text\n",
        "\n",
        "# Test it with a URL\n",
        "test_url = \"https://www.bollywoodhungama.com/movie/avatar-fire-ash-english/critic-review/avatar-fire-ash-english-movie-review/avatar-fire-and-ash-is-a-visually-stunning-big-screen-spectacle/\"\n",
        "web_text = get_website_content(test_url)"
